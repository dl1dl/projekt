@model IEnumerable<WebAppUser>

@{
    ViewData["Title"] = "Użytkownicy";
}

<br />
<div>
    <a class="btn btn-primary" asp-action="CreateUser">Stwórz nowe konto</a>
</div>

<h2>Lista użytkowników</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">Brak zarejestrowanych użytkowników</td></tr>
    }
    else
    {
        foreach(WebAppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    }
</table>