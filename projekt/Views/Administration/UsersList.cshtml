@model IEnumerable<WebAppUser>

@{
    ViewData["Title"] = "Użytkownicy";
}

<br />
<div>
    <a class="btn btn-primary" asp-action="CreateUser">Stwórz nowe konto</a>
</div>

<h2>Lista użytkowników</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">Brak zarejestrowanych użytkowników</td></tr>
    }
    else
    {
        foreach(WebAppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-success" asp-action="EditUser" asp-route-id="@user.Id">Edytuj</a>
                        <button type="submit" class="btn btn-danger">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>