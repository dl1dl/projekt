@model CreateUserModel

@{
    ViewData["Title"] = "Tworzenie użytkownika";
}

<h2>Utwórz użytkownika</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label asp-for="Email">Adres email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <button type="submit" class="btn btn-success">Utwórz</button>
    <a asp-action="Users" class="btn btn-danger">Anuluj</a>
</form>