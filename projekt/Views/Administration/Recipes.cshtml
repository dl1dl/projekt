@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Przepisy";
}

<br />
<div>
    <a class="btn btn-primary" asp-controller="Recipe" asp-action="AddRecipe">Dodaj przepis</a>
</div>

<h2>Lista przepisów</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Nazwa</th>
        <th>Autor</th>
        <th>Kategoria</th>
        <th>Poziom trudności</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">Brak przepisów</td></tr>
    }
    else
    {
        foreach (Recipe recipe in Model)
        {
            <tr>
                <td>@recipe.RecipeID</td>
                <td>@recipe.Name</td>
                <td></td>
                <td></td>
                <td></td>   
                <td>
                    <form asp-action="DeleteRecipe" asp-route-id="@recipe.RecipeID" method="post">
                        <a class="btn btn-success" asp-action="EditRecipe" asp-route-recipeID="@recipe.RecipeID">Edytuj</a>
                        <button type="submit" class="btn btn-danger">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>