@model List<Recipe>

@{
    ViewData["Title"] = "Wyniki wyszukiwania";
}

<h2>Wyniki wyszukiwania</h2>

@if (Model.Count() > 0)
{
    @foreach (var recipe in Model)
    {
        <h4>@recipe.Name</h4>
        <p>@recipe.Description</p>
    }
}
else
{
    <h3>nie znaleziono przepisów dla podanych parametrów</h3>
}

@ViewBag.a.Category
@ViewBag.a.DifficultyLevel