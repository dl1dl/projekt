@model WebAppUser

@{
    ViewData["Title"] = "Profil użytkownika";
}

<h2>Profil użytkownika @Model.Email</h2>

<h3>Dodane przepisy:</h3>
@if (@Model.Recipes.Count() > 0)
{
    <ul>
        @foreach (var recipe in Model.Recipes)
        {
            <li><a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.RecipeID">@recipe.Name</a></li>
        }
    </ul>
}
else
{
    <h4>Brak dodanych przepisów</h4>
}

<h3>Dodane komentarze:</h3>
@if (@Model.Comments.Count() > 0)
{
    <ul>
        @foreach (var comment in Model.Comments)
        {
            <li>
                <p>"@comment.Body"</p>
                <p>przepis: <a asp-controller="Recipe" asp-action="Details" asp-route-id="@comment.Recipe.RecipeID">@comment.Recipe.Name</a></p>
            </li>
        }
    </ul>
}
else
{
    <h4>Brak opublikowanych komentarzy</h4>
}

<h3>Przepisy dodane do ulubionych:</h3>
@if (@Model.FavoriteRecipes.Count() > 0)
{
    <ul>
        @foreach (var recipe in Model.FavoriteRecipes)
        {
        <li>
            <div>
                <a style="display: inline" asp-controller="Recipe" asp-action="RemoveFromFavorites" asp-route-id="@recipe.FavoriteRecipeID"
                   asp-route-userId="@Model.Id" class="btn btn-danger">usuń z ulubionych</a>
                <p style="margin-left:10px; display: inline"><a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Recipe.RecipeID">@recipe.Recipe.Name</a></p>

            </div>
        </li>
        }
    </ul>
}
else
{
    <h4>Brak ulubionych przepisów</h4>
}
