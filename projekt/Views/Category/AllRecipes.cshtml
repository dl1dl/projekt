@model IndexVM

@{
    ViewData["Title"] = "Wszystkie przepisy w tej kategorii";
}

<h2>Przepisy w kategorii @Model.Category.Name</h2>

<ul>
@foreach (var recipe in Model.Recipes)
{
    <li>
        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.RecipeID">@recipe.Name</a>
        <p>@recipe.Description</p>
    </li>
        
}
</ul>